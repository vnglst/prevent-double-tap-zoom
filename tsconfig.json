{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "module": "ESNext",
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}
